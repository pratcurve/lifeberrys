<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="48dp"
    android:layout_width="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/design_navigation_icon_size"
        android:layout_height="@dimen/design_navigation_icon_size"
        android:layout_gravity="center_vertical"
        android:alpha="54"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/fab_icon">
    </ImageView>
    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textColor = "#000"
        android:fontFamily="Roboto Medium"
        android:textSize="@dimen/desired_sp_heading"
        android:layout_marginLeft="14dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:id="@+id/drawer_text_view"
        android:layout_gravity="center_horizontal"
        tools:targetApi="jelly_bean">
    </TextView>
</LinearLayout>