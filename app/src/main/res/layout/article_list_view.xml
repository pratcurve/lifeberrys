<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:id="@+id/articleListLayout"
    android:background="#ffffff"
    android:elevation="4dp"
    android:layout_margin="10dp"
    android:paddingLeft="3dp">
    <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/gray_card"
        android:layout_gravity = "center"
        style="?android:attr/thumbnail"
        android:id="@+id/articleMainImage"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000"
            android:maxLines="2"
            android:lines="2"
            android:layout_weight="0.7"
            android:ellipsize="end"
            android:text="Here goes the main heading of the article in the list view"
            android:layout_gravity="top"
            android:id="@+id/articleHeading" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#84000000"
            android:layout_weight="0.3"
            android:id="@+id/description_hint"
            android:fontFamily="sans-serif"
            android:paddingTop="1dp"
            android:paddingBottom="3dp"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="description sample text, only two lines will be displayed max in the description of article"/>
    </LinearLayout>
</LinearLayout>